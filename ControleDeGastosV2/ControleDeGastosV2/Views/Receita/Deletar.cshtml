@model Receita

<div class="container">

    <div class="row g-lg-3 text-center">
        <div class="col-lg-4">
            <h1>
                Apagar Receita
            </h1>
        </div>

        <div class="col-lg-4 offset-lg-4">
            <a class="btn btn-lg btn-danger" asp-action="Index">Cancelar</a>
        </div>

    </div>

    <hr />

    <!-- Div para receber os erros de ModeState.AddModelError -->
    <div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3">

    </div>

    <partial name="_Messages" />

    <div class="mt-3 row">

        <form method="post" asp-controller="Receita" asp-action="Deletar" class="row g-3">
            <input hidden asp-for="ReceitaId" />
            <input hidden asp-for="CarteiraId" />
            <input hidden asp-for="CategoriaId" />
            @*<input hidden asp-for="Valor" />*@

            <div class="col-lg-12">
                <h3>Tem certeza que deseja <span class="text-danger fw-bold">DELETAR</span> a receita <q><u>@Model.Descricao</u></q>, do dia @Model.DataReceita.ToString("dd/MMMM/yyyy") no valor de <span class="text-danger fw-bold">@Model.Valor.ToString("C2")</span>?</h3>
            </div>

            <div class="col-lg-2">
                <button type="submit" class="btn btn-lg btn-danger">
                    Deletar
                </button>
            </div>

        </form>
    </div>

</div>
