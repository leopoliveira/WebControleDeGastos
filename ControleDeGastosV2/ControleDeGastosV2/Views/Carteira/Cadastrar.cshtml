@model Carteira
@{
    string acao = ViewContext.RouteData.Values["id"] != null ? "Editar" : "Criar";
    if (ViewContext.RouteData.Values["id"] != null)
    {
        ViewData["Title"] = "Editar";
    }
    else
    {
        ViewData["Title"] = "Criar";
    }

}


<div class="container">

    <div class="row g-lg-3 text-center">
        <div class="col-lg-4">
            <h1>
                @acao Carteira
            </h1>
        </div>
        <div class="offset-lg-2 col-lg-2 mb-2">
            <a class="btn btn-lg btn-danger" asp-action="Index">Cancelar</a>
        </div>
        <div class="col-lg-2 mb-2">
            <a class="btn btn-lg btn-outline-success" asp-action="Cadastrar" asp-controller="Receita" asp-route-cid="@Model.CarteiraId">Receitas</a>
        </div>
        <div class="col-lg-2 mb-2">
            <a class="btn btn-lg btn-outline-danger" asp-action="Cadastrar" asp-controller="Despesa" asp-route-cid="@Model.CarteiraId">Despesas</a>
        </div>
    </div>

        <hr />


    <div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3"> 

    </div>

    <partial name="_Messages" />

    <div class="mt-3 row">
        <form method="post" asp-controller="Carteira" asp-action="Cadastrar" class="row g-3">
            <input hidden asp-for="CarteiraId" />
            @*<input hidden asp-for="IdUsuario" />*@
            <div class="col-lg-4 form-group">
                <label asp-for="Nome" class="form-label">Nome:</label>
                <input asp-for="Nome" class="form-control" autofocus>
                <span asp-validation-for="Nome" class="alert-danger"></span>
            </div>

            <div class="col-lg-4 form-group">
                <label asp-for="Saldo" class="form-label">Saldo Inicial:</label>
                <input asp-for="Saldo" class="form-control">
                <span asp-validation-for="@Model.Saldo" class="alert-danger"></span>
            </div>


            <div class="col-lg-1 form-group">
                <label asp-for="CorHexaDecimal" class="form-label">Cor:</label>
                <input type="color" asp-for="CorHexaDecimal" class="form-control color-picker">
            </div>

            <div class="col-lg-5 form-group form-check">
                <label asp-for="CarteiraPrincipal" class="form-check-label">Carteira Principal?</label>
                <input type="checkbox" asp-for="CarteiraPrincipal" class="form-check-input">
            </div>

            <div class="col-lg-10">
                <a asp-action="Index" accesskey="" class="btn btn-lg btn-danger">Cancelar</a>
                <button type="submit" class="btn btn-lg btn-primary">@acao</button>
            </div>
        </form>
    </div>

</div>
