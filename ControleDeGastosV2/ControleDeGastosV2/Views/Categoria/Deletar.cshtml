@model Categoria

<div class="container">

    <div class="row g-lg-3 text-center">
        <div class="col-lg-4">
            <h1>
                Apagar Categoria
            </h1>
        </div>

        <div class="col-lg-4 offset-lg-4">
            <a class="btn btn-lg btn-danger" asp-action="Index">Cancelar</a>
        </div>

    </div>

    <hr />

    <!-- Div para receber os erros de ModeState.AddModelError -->
    <div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3">

    </div>

    <partial name="_Messages" />

    <div class="mt-3 row">

        <form method="post" asp-controller="Categoria" asp-action="Deletar" class="row g-3">
            <input hidden asp-for="CategoriaId" />
            @*<input hidden asp-for="IdUsuario" />*@

            <div class="col-lg-12">
                <h3>Tem certeza que deseja <span class="text-danger fw-bold">DELETAR</span> a categoria <q><u>@Model.Nome</u></q>?</h3>
            </div>

            <div class="col-lg-2">
                <button type="submit" class="btn btn-lg btn-danger">
                    Deletar
                </button>
            </div>
        
        </form>
    </div>

</div>
