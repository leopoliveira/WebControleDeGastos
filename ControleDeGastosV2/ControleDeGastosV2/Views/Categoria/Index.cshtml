@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Categorias";
}

<div class="container-sm">

    <div class="row g-lg-3 text-center">
        <div class="col-lg-3">
            <h1>
                Categorias
            </h1>
        </div>

        <div class="offset-lg-3 col-lg-2 mb-2">
            <a class="btn btn-lg btn-outline-primary text-nowrap" asp-action="Cadastrar">Nova Categoria</a>
        </div>

        <div class="col-lg-2 mb-2">
            <a class="btn btn-lg btn-outline-success" asp-action="Index" asp-controller="Receita" asp-route-mes="@DateTime.Now.Month">Receitas</a>
        </div>
        <div class="col-lg-2 mb-2">
            <a class="btn btn-lg btn-outline-danger" asp-action="Index" asp-controller="Despesa" asp-route-mes="@DateTime.Now.Month">Despesas</a>
        </div>

    </div>
     
    <hr />

    <partial name="_Messages" />

    <div class="row g-lg-3 mt-4">
        <table class="table table-responsive-lg table-hover table-striped tabela-categorias">
                <thead>
                    <tr>
                        <th scope="col" class="fw-bold text-center">Nome</th>
                        <th scope="col" class="fw-bold text-center">Cor</th>
                        <th scope="col" class="fw-bold text-center">Receita</th>
                        <th scope="col" class="fw-bold text-center">Despesa</th>
                        <th scope="col" class="fw-bold text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Categoria categoria in Model)
                    {
                    <tr class="fs-6">
                        <td class="align-middle text-center">@categoria.Nome</td>
                        <td class="align-middle text-center" style="color: @categoria.CorHexaDecimal"><i class="fa-solid fa-circle"></i></td>
                        <td class="align-middle text-center">
                            @if (categoria.IsReceita)
                            {
                                <i class="fa-solid fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-xmark text-danger"></i>
                            }
                        </td>
                        <td class="align-middle text-center">
                            @if (categoria.IsDepesa)
                            {
                                <i class="fa-solid fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-xmark text-danger"></i>
                            }
                        </td>
                        <td class="align-middle text-center">
                            <a class="btn btn-lg btn-outline-primary" asp-action="Cadastrar" asp-route-id="@categoria.CategoriaId">
                                Editar
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
        </table>
    </div>

</div>
